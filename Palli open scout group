  <script>
    function handleJoin(e){
      e.preventDefault();
      const name = document.getElementById('jname').value.trim();
      const email = document.getElementById('jemail').value.trim();
      const role = document.getElementById('jrole').value.trim();
      if(!name || !email || !role){ alert('সব ঘর পূরণ করো'); return; }
      const grid = document.getElementById('membersGrid');
      const div = document.createElement('div'); div.className='member';
      div.innerHTML = `<div class="avatar">${name.split(' ').map(s=>s[0]).slice(0,2).join('')}</div><strong>${name}</strong><small style=\"color:var(--muted)\">${role}</small>`;
      grid.appendChild(div);
      alert('ধন্যবাদ, ' + name + '! তোমার আবেদন পাওয়া গেছে (ডেমো)।');
      e.target.reset();
    }

    function handleContact(e){
      e.preventDefault();
      const name = document.getElementById('cname').value.trim();
      const email = document.getElementById('cemail').value.trim();
      const msg = document.getElementById('cmsg').value.trim();
      if(!name||!email||!msg){ alert('সব ঘর পূরণ করো'); return; }
      alert('ধন্যবাদ, ' + name + '! তোমার মেসেজ পাওয়া গেছে (ডেমো)।');
      e.target.reset();
    }
  </script>
